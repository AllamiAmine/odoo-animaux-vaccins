<odoo>
    <!-- Vue Tree (Liste) -->
    <record id="view_animal_tree" model="ir.ui.view">
        <field name="name">animal.tree</field>
        <field name="model">tp.animal</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type"/>
                <field name="date_naissance"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form (Formulaire) -->
    <record id="view_animal_form" model="ir.ui.view">
        <field name="name">animal.form</field>
        <field name="model">tp.animal</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="date_naissance"/>
                    </group>
                    <notebook>
                        <page string="Vaccins">
                            <field name="vaccin_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="date_vaccin"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_animaux" model="ir.actions.act_window">
        <field name="name">Animaux</field>
        <field name="res_model">tp.animal</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Principal -->
    <menuitem id="menu_animaux_root" name="Animaux"/>
    
    <!-- Sous-menu Animaux -->
    <menuitem id="menu_animaux" 
              name="Animaux" 
              parent="menu_animaux_root"
              action="action_animaux"/>
</odoo>
